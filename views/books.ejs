<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Books</title>
</head>
<body>
    <%- include("partials/header") %>
    <div id="books-page-main-content">
        <div class="books-page-main-content-item" id="books-container">
            <% books.forEach(book => { %>
                <div class="book">
                    <p><%= book.book_name %></p>
                    <p><% book.author_name %></p>
                    <p><a href="/books/<%= book.book_name.toLowerCase() %>">View details</a></p>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>