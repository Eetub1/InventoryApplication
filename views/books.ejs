<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Books</title>
</head>
<body>
    <%- include("partials/header") %>
    <div id="books-page-main-content">
        <div class="books-page-main-content-item" id="left-sidebar">
            <button id="new-book-btn">New book</button>
        </div>
        <div class="books-page-main-content-item" id="books-container">
            <% books.forEach(book => { %>
                <div class="book">
                    <p><%= book.book_name %></p>
                    <p><%= book.author_name %></p>
                    <p><a href="/books/<%= book.book_name.toLowerCase() %>">View details</a></p>
                </div>
            <% }) %>
        </div>
    </div>

    <dialog id="add-book-dialog">
        <div id="add-book-div">
            <form action="/books/addBook" method="POST">
            <div class="form-rows-container">

                <div class="form-row">
                    <label for="">Name</label>
                    <input name="book_name" type="text">
                </div>

                <div class="form-row">
                    <label for="">Author</label>
                    <input name="author_name" type="text">
                </div>

                <div class="form-row">
                    <label for="">Year</label>
                    <input name="release_year" type="text">
                </div>

                <div class="form-row">
                    <label for="">Pages</label>
                    <input name="page_count" type="text">
                </div>

                <div class="form-row">
                    <label for="">Genres</label>
                    <p>Enter genres separated with a comma</p>
                    <input name="genres" type="text">
                </div>

                <div class="form-row">
                    <div class="checkbox-row">
                        <label for="">Fantasy</label>
                        <input name="genre" value="Fantasy" type="checkbox">
                    </div>

                    <div class="checkbox-row">
                        <label for="">Adventure</label>
                        <input name="genre" value="Adventure" type="checkbox">
                    </div>
                </div>

            </div>

            <div class="buttons-container">
                <button type="submit" id="add-btn">Add book</button>
                <button type="button" id="cancel-book-add-btn">Cancel</button>
            </div>
        </form>
        </div>
    </dialog>
    <%- include("partials/footer") %>
    <script src="/js/books.js"></script>
</body>
</html>